<%= form_with(model: user_transaction, url: "/transactions") do |form| %>
<div class="card-body">

  <% if user_transaction.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(user_transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>
  
    <ul>
      <% user_transaction.errors.each do |error| %>
      <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, style: "form-control" %>
  </div>
  
  <div>
    <%= form.label :no_phone, style: "display: block" %>
    <%= form.text_field :no_phone, style: "form-control" %>
  </div>
  
  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, style: "form-control" %>
  </div>
  
  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, style: "form-control" %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
</div>
<% end %>