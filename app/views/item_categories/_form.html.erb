<%= form_with(model: item_category) do |form| %>
  <% if item_category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item_category.errors.count, "error") %> prohibited this item_category from being saved:</h2>

      <ul>
        <% item_category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.select :category_id, Category.all.map { |category| [category.name, category.id] } %>
