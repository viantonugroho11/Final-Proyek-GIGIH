  </div>

  <div>
    <%= form.label :item_id, style: "display: block" %>
    <%= form.select :item_id, Item.all.map { |item| [item.name, item.id] } %>
    <!-- <%= form.text_field :item_id %> -->
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
